{
  "name": "markdowner",
  "version": "1.0.0",
  "description": "Convert various file formats to markdown using AI and specialized converters",
  "main": "./markdowner.js",
  "bin": {
    "markdowner": "./dist/cli.js"
  },
  "exports": {
    ".": "./markdowner.js",
    "./docx": "./markdowner-docx.js",
    "./image": "./markdowner-image.js",
    "./pdf": "./markdowner-pdf.js",
    "./pptx": "./markdowner-pptx.js",
    "./txt": "./markdowner-txt.js",
    "./xlsx": "./markdowner-xlsx.js",
    "./stereotype": "./stereotype.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "pnpm run build && node --test dist/**/*.test.js"
  },
  "dependencies": {
    "@adobe/helix-docx2md": "^1.8.0",
    "@mozilla/readability": "^0.6.0",
    "@types/jsdom": "^21.1.7",
    "commander": "^12.1.0",
    "file-type": "^21.0.0",
    "jsdom": "^27.0.0",
    "markdown-tables": "^2.0.1",
    "markdowner": "link:",
    "ollama": "^0.5.0",
    "pdf2square": "file:../pdf2square",
    "pptx-in-html-out": "^0.0.2",
    "readability": "link:@types/@mozilla/readability",
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
