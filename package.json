{
  "name": "@itaylor/markdowner",
  "version": "0.0.1",
  "description": "Convert various file formats to markdown using AI and specialized converters",
  "license": "MIT",
  "main": "./dist/markdowner.js",
  "bin": {
    "markdowner": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/markdowner.js",
    "./docx": "./dist/markdowner-docx.js",
    "./image": "./dist/markdowner-image.js",
    "./pdf": "./dist/markdowner-pdf.js",
    "./pptx": "./dist/markdowner-pptx.js",
    "./txt": "./dist/markdowner-txt.js",
    "./xlsx": "./dist/markdowner-xlsx.js",
    "./stereotype": "./dist/stereotype.js"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "test": "npm run build && node --test dist/**/*.test.js",
    "format": "deno fmt --options-single-quote"
  },
  "dependencies": {
    "@adobe/helix-docx2md": "^1.8.0",
    "@itaylor/pdf2square": "^0.0.4",
    "@mozilla/readability": "^0.6.0",
    "@types/jsdom": "^21.1.7",
    "commander": "^12.1.0",
    "file-type": "^21.0.0",
    "jsdom": "^27.0.0",
    "markdown-tables": "^2.0.1",
    "ollama": "^0.5.0",
    "openai": "^6.7.0",
    "pptx-in-html-out": "^0.0.2",
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/turndown": "^5.0.5",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
